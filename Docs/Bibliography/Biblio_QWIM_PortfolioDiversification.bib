@Article{Jacobsen-Scheiber-2022a,
  author           = {Brian Jacobsen and Matthias Scheiber},
  date             = {2022-01},
  journaltitle     = {The Journal of Portfolio Management},
  title            = {When to Diversify Differently},
  doi              = {10.3905/jpm.2022.1.328},
