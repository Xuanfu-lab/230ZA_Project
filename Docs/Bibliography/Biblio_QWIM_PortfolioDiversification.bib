  date                 = {2011-02},
  journaltitle         = {The Journal of Investing},
  title                = {Risk Parity and Diversification},
  doi                  = {10.3905/joi.2011.20.1.119},
  issn                 = {1068-0896},
  number               = {1},
  pages                = {119--127},
