@Article{dePrado-2021a,
  author           = {{Lopez de Prado}, Marcos},
  date             = {2021},
  journaltitle     = {SSRN e-Print},
  title            = {Detection of False Investment Strategies through {FWER} and {FDR} (Seminar Slides)},
  doi              = {10.2139/ssrn.3799803},
